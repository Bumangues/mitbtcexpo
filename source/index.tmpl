    <!-- PAGE | SPEAKERS -->
    <div class="pages black page-speakers" id="page-speakers">
    <div class="container">
        <header>
            <h4 class="line-divider">2015 Expo Speakers</h4>
            <h1>Meet Our Speakers</h1>
            <div class="row">
            <div class="span8 offset2">
                <p>
                <!--/* This page will be updated as more speakers confirm */-->
                </p>
            </div>
            </div>
        </header>
        <article>
            <!-- List of speakers and short bios-->
            <div id="speakerlist">
            {% for index, (image, name, byline, bio) in enumerate(speakers) %}
                {% if index %3 == 0 %}
                <div class="thumbnails about-items row">
                {% end %}
                    <div class="span4 center">
                        <div class="item">
                            <img class="img-circle" src="{{image}}" alt="MIT BITCOIN EXPO">
                        </div>
                        <h5>
                            {{name}}<br/>
                            <small>{{byline}}</small>
                        </h5>
                        <p class="smallFontBy08"> {{bio}}</p>
                    </div>
                    {% if index %3 == 2 %}
                </div>
                    {% end %}
                {% end %}
            {% if len(speakers) %3 != 2 %}
            </div>
            {% end %}
        </div>
        </article>
        <footer>
            <!-- More speakers -->
            <div class="show-more-cube">
            </div>
        </footer>
    </div>
    </div>
    <!-- END PAGE | SPEAKERS -->

    <!-- PAGE | SCHEDULE -->
        
        <div class="pages white page-twitter" id="page-schedule">
            <!-- Page overlay -->
            <div class="overlay"></div>
            <div class="container">
                <!-- Header -->
                <header>
                    <h4 class="line-divider">2015 Expo Schedule</h4>
                    <h2>DAY 1</h2>
                </header>
                <!-- End Header -->
                <!-- Schedule Table -->
                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th>Time</th>
                            <th>Topic</th>
                            <th>Speakers</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for index, [time,event,speaker] in enumerate(day1) %}
                        <tr>
                            <td>{{time}}</td>
                            <td>{{event}}</td>
                            <td>{{speaker}}</td>
                        </tr>           
                        {% end %}        
                    </tbody>
                </table>
                <!-- Header -->
                <header>
                    <h2>DAY 2</h2>
                </header>
                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th>Time</th>
                            <th>Topic</th>
                            <th>Speakers</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for index, [time,event,speaker] in enumerate(day2) %}
                        <tr>
                            <td>{{time}}</td>
                            <td>{{event}}</td>
                            <td>{{speaker}}</td>
                        </tr>           
                        {% end %}           
                    </tbody>
                </table>
                <!-- End Schedule Table-->
            </div>
        </div>
    </div>
    <!-- END PAGE | SCHEDULE -->

    <!-- PAGE | CONTACT -->
    <div class="pages black-bg white page-contact" id="page-contact">
        <div class="container">
            <header>
                <h4 class="line-divider">Contact</h4>
                <h1>Questions? Comments?</h1>
                <div class="row">
                    <div class="span8 offset2">
                        <p>
                            Want to become a sponsor? Have cool research you want to present? 
                        </p>
                    </div>
                </div>
            </header>
            <article>
                <div class="row-fluid">
                    <!-- Contact information -->
                    <div class="span5 offset1">
                        <div class="media">
                            <div class="social-icons sicon-white pull-left">
                                <a href="https://www.google.com/maps/place/Compton+Labs/@42.36094,-71.091239,17z/data=!3m1!4b1!4m2!3m1!1s0x89e370a962cdee87:0xc0dc57ed7b9909ab" class="sicon-place"><i>Location</i></a>
                            </div> 
                            <div class="media-body smallFontBy08">
                                <p>Massachusetts Institute of Technology</p>
                            </div>
                        </div>
                        <div class="media">
                            <div class="social-icons sicon-white pull-left">
                                <a href="http://bitcoin.mit.edu" class="sicon-phone"><i>Website</i></a>
                            </div> 
                            <div class="media-body smallFontBy08">
                                <p>bitcoin.mit.edu</p>
                            </div>
                        </div>
                        <div class="media">
                            <div class="social-icons sicon-white pull-left">
                                <a href="mailto:mitbtc-officers@mit.edu" class="sicon-mail"><i>email</i></a>
                            </div> 
                        <div class="media-body smallFontBy08">
                            <p>mitbtc-officers@mit.edu</p>
                        </div>
                    </div>
                    <br/>
                    <br/>
                    <br/>
                </div>
                <!-- End Contact information -->
            </div>
            <div class="center">
                <p>Our code of conduct is viewable here: <a href="https://titleix.mit.edu/">titleix.mit.edu/</a></p>
            </div>
            </article>
        </div>

        <!-- Background map image -->
        <div id="map-image">
            <img src="assets/images/pages/contact/map_bck.jpg" alt="MIT Bitcoin Club">
        </div>
    </div>
