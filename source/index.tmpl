    <!-- PAGE | Registration -->
    <div class="pages black page-details" id="page-details">
        <div class="container">
            <header>
                <h4 class="line-divider">Viewing</h4>
            </header>
            <div class="center">
                <a href="https://www.youtube.com/watch?v=lIgjogLipvk" id="livestream">Day 1 Feed</a>
            </div>
            </br>
